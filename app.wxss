@import 'style/weui.wxss';
@import "/style/colorui.wxss";
page{
    box-sizing: border-box;
    background: #f1f1f1;
    color: #353535;
    font-size: 16px;
    position: relative;
}
form{
    width: 100%;
}
.container{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.scroll{
  flex:1;
  overflow-y:auto;
  position: relative;
}
.card{
    margin: 15px;
    border-radius: 5px;
    overflow: hidden;
}
.login-input-cell{
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    margin: 30px 0;
    font-size: 14px;
    padding: 0 20px;
}
.label{
    margin-right: 10px;
}
.input{
    background: #fff;
    flex: 1;
    border-radius: 5px;
    padding: 0 10px;
}
.input input{
    height: 40px;
    line-height: 40px;
}
.weui-btn[type=primary] {
    width: 100%;
    font-size: 15px;
    line-height: 40px;
    color: #fff;
    background-color: #014099;
}
.button-hover[type=primary] {
    color:rgba(255, 255, 255, 0.6);
    background-color:rgba(1, 64, 153,.6);
}
.btn-bottom{
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background: #014099;
    color: #fff;
}
.text-magi,
.line-magi,
.lines-magi {
	color: #004098;
}
.bg-gradual-magi{
  background-image:linear-gradient(45deg, #004098, #247af1);
  color: #fff;
}
.bg-magi {
    background-color: #004098;
    color: #ffffff;
}

